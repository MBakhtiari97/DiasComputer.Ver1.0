@using DiasComputer.Utility.Convertors
@model DiasComputer.Core.DTOs.Cart.PaymentConclusionViewModel
@{
    ViewData["Title"] = ((ViewBag.IsSuccess == true) ? "پرداخت موفق" : "پرداخت ناموفق");
}

@if (ViewBag.IsSuccess == true)
{
    <div class="wrapper default shopping-page">
        <!-- header-shopping -->
    <header class="header-shopping default">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <ul class="checkout-steps">
                            <li>
                                <a href="#">
                                    <span>اطلاعات ارسال</span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#">
                                    <span>پرداخت</span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#" class="active">
                                    <span>اتمام خرید و ارسال</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- header-shopping -->
        <!-- main-shopping -->
    <main class="cart-page default">
            <div class="container">
                <div class="row">
                    <div class="cart-page-content col-12 order-1">
                        <section class="page-content default">
                            <div class="success-checkout text-center default">
                                <div class="icon-success">
                                    <i class="fa fa-check"></i>
                                </div>
                                <h1>سفارش <a href="#">DC-@Model.OrderId</a>با موفقیت در سیستم ثبت شد.</h1>
                                <p>سفارش نهایتا تا یک روز آماده ارسال خواهد شد.</p>
                            </div>
                            <div class="order-info default">
                                <h3>کد سفارش: <span>DC-@Model.OrderId</span></h3>
                                <p>
                                    سفارش شما با موفقیت در سیستم ثبت شد و هم اکنون <span class="badge badge-success">تکمیل شده</span> است.جزئیات این سفارش را می توانید
                                    با کلیک بر روی دکمه <a href="/MyProfile/Orders/ShowDetails/@Model.OrderId" class="btn-link-border">پیگیری سفارش</a>مشاهده نمایید.
                                </p>
                                <a href="/MyProfile/Orders/ShowDetails/@Model.OrderId">
                                    <button type="button" class="btn-primary">
                                        پیگیری سفارش
                                    </button>
                                </a>
                                <div class="table-responsive default mt-3 mb-3">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">نام تحویل گیرنده : @Model.Username</th>
                                                <th scope="col">شماره تماس : @Model.PhoneNumber</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">تعداد مرسوله : 1</th>
                                                <td>مبلغ فاکتور : @Model.TotalPrice.ToString("#,0") تومان</td>
                                            </tr>
                                            <tr>
                                                @{
                                                    DateTime paymentDate = ViewBag.Date;
                                                }
                                                <th scope="row">تاریخ ثبت سفارش : @paymentDate.ToShamsi()</th>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <th scope="row">وضعیت پرداخت : پرداخت آنلاین(موفق)</th>
                                                <td>وضعیت سفارش: در حال پردازش</td>
                                            </tr>
                                            <tr>
                                                <th scope="row">آدرس : @Model.Address</th>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </main>
        <!-- main-shopping -->
</div>
}
else
{
    <div class="wrapper default shopping-page">
        <!-- header-shopping -->
    <header class="header-shopping default">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <ul class="checkout-steps">
                            <li>
                                <a href="#" class="active">
                                    <span>اطلاعات ارسال</span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#" class="active">
                                    <span>پرداخت</span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#" class="active">
                                    <span>اتمام خرید و ارسال</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- header-shopping -->
        <!-- main-shopping -->
    <main class="cart-page default">
            <div class="container">
                <div class="row">
                    <div class="cart-page-content col-12 order-1">
                        <section class="page-content default">
                            <div class="warning-checkout text-center default">
                                <div class="icon-warning">
                                    <i class="fa fa-close"></i>
                                </div>
                                <h1>پرداخت ناموفق</h1>
                                <p class="text-warning">لطفا مجددا نسبت به پرداخت هزینه سفارش خود اقدام نمایید.</p>
                                @if (ViewBag.FailedWalletPayment == true)
                                {
                                    <p class="text-warning">موجودی کیف پول شما کافی نمی باشد !</p>
                                }
                                else
                                {
                                    <p>در صورتی که هزینه از حساب شما کم شده باشه ، مبلغ طی نهایتا 72 ساعت به حساب شما عودت خواهد یافت !</p>
                                }
                                <a class="btn btn-primary" href="/Cart">بازگشت به سبد خرید</a>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </main>
        <!-- main-shopping -->
</div>
}