@model DiasComputer.Core.DTOs.Admin.PublicEmailViewModel
@{
    ViewData["Title"] = "ارسال ایمیل خصوصی";
}

<div class="margin-pages">
    <h1>ارسال ایمیل به مدیران سایت</h1>

    <hr />
    <div class="row">
        <div class="col-12 col-md-12">
            <form asp-action="SendAdminsEmail" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <p class="text-secondary">* توجه : ایمیل برای تمام مدیران ارسال خواهد شد !</p>
                    <div class="form-group col-md-12">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ارسال ایمیل" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-warning" asp-action="Index">انصراف</a>
    </div>
</div>


@section Scripts {
    <script src="/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace( 'Description', {
            contentsLangDirection: 'rtl'
        });
    </script>
}