@model DiasComputer.DataLayer.Entities.SiteResources.SiteContactDetail
@{
    ViewData["Title"] = "افزودن جزئیات تماس با ما";
}

<div class="margin-pages">
    <h1>افزودن جزئیات تماس با ما</h1>
    <hr />

    <div class="row">
        <div class="col-12 col-md-12">
            <form asp-action="AddNewDetail" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="SCD_TypeTitle" class="control-label"></label>
                        <input asp-for="SCD_TypeTitle" class="form-control"/>
                        <span asp-validation-for="SCD_TypeTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="SCD_Value" class="control-label"></label>
                        <input asp-for="SCD_Value" class="form-control"/>
                        <span asp-validation-for="SCD_Value" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="submit" value="افزودن جزئیات جدید" class="btn btn-primary"/>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-warning" asp-action="Index">انصراف</a>
    </div>
</div>