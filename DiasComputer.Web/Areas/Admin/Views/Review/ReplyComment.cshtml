@model DiasComputer.Core.DTOs.Admin.AdminReviewsViewModel
@{
    ViewData["Title"] = "پاسخ به نظر";
}

<div class="margin-pages">
    <h1>پاسخ به نظر</h1>

    <hr />
    <div class="row">
        <div class="col-12 col-md-12">
            <form asp-action="ReplyComment" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ParentId" value="@ViewBag.ReviewId" />
                <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />
                <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />

                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="ReviewText" class="control-label"></label>
                        <input asp-for="ReviewText" class="form-control" />
                        <span asp-validation-for="ReviewText" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="submit" value="ثبت پاسخ" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-warning" asp-action="AwaitingReviews">انصراف</a>
    </div>
</div>

