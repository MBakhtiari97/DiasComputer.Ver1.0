@using DiasComputer.Utility.Convertors
@{
    ViewData["Title"] = "نتیجه پرداخت";
}
@if (ViewBag.IsSuccess == true)
{
    <main class="cart-page default">
        <div class="container">
            <div class="row">
                <div class="cart-page-content col-12 order-1">
                    <section class="page-content default">
                        <div class="success-checkout text-center default">
                            <div class="icon-success">
                                <i class="fa fa-check"></i>
                            </div>
                            <h1>افزایش اعتبار کیف پول با موفقیت انجام پذیرفت.</h1>
                            <p>اکنون میتوانید از اعتبار کیف پول خود برای خرید کالاها استفاده نمایید.</p>
                        </div>
                        <div class="order-info default">
                            <h3>کد پیگیری: <span>@ViewBag.Code</span></h3>
                            <p>
                                افزایش اعتبار کیف پول شما با موفقیت در سیستم ثبت شد و هم اکنون <span class="badge badge-success">تایید شده</span> است.جزئیات این تراکنش را می توانید
                                در زیر مشاهده نمایید.
                            </p>
                            <div class="table-responsive default mt-3 mb-3">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>مبلغ تراکنش</th>
                                            <th>نوع تراکنش</th>
                                            <th>تاریخ انجام تراکنش</th>
                                            <th>وضعیت تراکنش</th>
                                            <th>درگاه پرداخت</th>
                                            <th>کد پیگیری</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <b>
                                                    <p class="text-primary">@ViewBag.Amount.ToString("#,0") تومان</p>
                                                </b>
                                            </td>
                                            <td>واریز</td>
                                            <td>
                                                @{
                                                    DateTime date = @ViewBag.Date;
                                                }
                                                @date.ToShamsi()
                                            </td>
                                            <td>انجام شده</td>
                                            <td>درگاه پرداخت زرین پال</td>
                                            <td>
                                                <p class="text-success">@ViewBag.Code</p>
                                            </td>
                                            <td>
                                                <a class="btn btn-success" href="/MyProfile/Wallet">کیف پول من</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
}
else
{
    <main class="cart-page default">
        <div class="container">
            <div class="row">
                <div class="cart-page-content col-12 order-1">
                    <section class="page-content default">
                        <div class="warning-checkout text-center default">
                            <div class="icon-warning">
                                <i class="fa fa-close"></i>
                            </div>
                            <h1>افزایش اعتبار کیف پول با شکست روبرو شد.</h1>
                            <p>لطفا مجددا نسبت به پرداخت وجه و شارژ کیف پول خود اقدام نمایید.</p>
                            <a class="btn btn-primary" href="/MyProfile/Wallet">کیف پول من</a>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
}


