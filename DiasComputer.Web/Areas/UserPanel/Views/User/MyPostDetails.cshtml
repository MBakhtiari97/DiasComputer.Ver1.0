@model List<DiasComputer.DataLayer.Entities.Users.PostDetail>
@{
    ViewData["Title"] = "اطلاعات پستی";
}

<main class="profile-user-page default">
    <div class="container">
        <div class="row">
            <div class="profile-page col-xl-9 col-lg-8 col-md-12 order-2">
                <div class="row">
                    <div class="col-12">
                        <div class="col-12">
                            <h1 class="title-tab-content">اطلاعات پستی</h1>
                        </div>
                        <div class="content-section default">
                            <div class="row">
                                @if (!Model.Any())
                                {
                                    <div class="col-12 text-center">
                                        <h1>اطلاعاتی یافت نشد !</h1>
                                    </div>
                                    <div class="col-12 text-center">
                                        <a href="/MyProfile/PostDetails/Insert" class="btn-link-border form-account-link">
                                            افزودن اطلاعات پستی جدید
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-sm-12 col-md-6">
                                            <p>
                                                <span class="title">شهر محل سکونت:</span>
                                                <span>@item.City</span>
                                            </p>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <p>
                                                <span class="title">آدرس :</span>
                                                <span>@item.Address</span>
                                            </p>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <p>
                                                <span class="title">شماره تماس :</span>
                                                <span>@item.PhoneNumber</span>
                                            </p>
                                        </div>
                                        <div class="col-sm-12 col-md-6">
                                            <p>
                                                <span class="title">کد پستی :</span>
                                                <span>@item.ZipCode</span>
                                            </p>
                                        </div>
                                        <div class="col-12 text-center">
                                            <a href="/MyProfile/PostDetails/Update/@item.PD_Id" class="btn-link-border form-account-link">
                                                ویرایش اطلاعات پستی
                                            </a>
                                        </div> 
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("ProfileMenu")
        </div>
    </div>
</main>