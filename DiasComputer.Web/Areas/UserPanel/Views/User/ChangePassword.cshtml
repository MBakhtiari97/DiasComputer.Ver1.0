@model DiasComputer.Core.DTOs.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}

<div class="container">
    <div class="row">
        <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
            <div class="account-box">
                <a href="#" class="logo">
                    <img src="/main-resources/assets/img/logo.png" alt="">
                </a>
                <div class="account-box-title">تغییر کلمه عبور</div>
                <div class="account-box-content">
                    <form class="form-account" asp-action="ChangePassword">
                        <div class="form-account-title">کلمه عبور قبلی</div>
                        <div class="form-account-row">
                            <label class="input-label"><i class="now-ui-icons ui-1_lock-circle-open"></i></label>
                            <input class="input-field" asp-for="CurrentPassword" type="password" placeholder="کلمه عبور قبلی خود را وارد نمایید">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-account-title">کلمه عبور جدید</div>
                        <div class="form-account-row">
                            <label class="input-label"><i class="now-ui-icons ui-1_lock-circle-open"></i></label>
                            <input class="input-field" asp-for="Password" type="password" placeholder="کلمه عبور جدید خود را وارد نمایید">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-account-title">تکرار کلمه عبور جدید</div>
                        <div class="form-account-row">
                            <label class="input-label"><i class="now-ui-icons ui-1_lock-circle-open"></i></label>
                            <input class="input-field" asp-for="ConfirmPassword" type="password" placeholder="کلمه عبور جدید خود را مجددا وارد نمایید">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-account-row form-account-submit">
                            <div class="parent-btn">
                                <button class="dk-btn dk-btn-info">
                                    تغییر کلمه عبور
                                    <i class="now-ui-icons arrows-1_refresh-69"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
